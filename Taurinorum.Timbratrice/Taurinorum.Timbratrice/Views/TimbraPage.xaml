<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taurinorum.Timbratrice.Views.TimbraPage"
             Shell.NavBarIsVisible="False">
    <StackLayout>
        
        <Label Text="{Binding CurrentTime}" FontSize="70" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

        <Label x:Name="ComeTimbrare" Margin="5,5,5,5" HorizontalTextAlignment="Center" FontSize="25" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

        <Button x:Name="ButtonTimbrare" FontSize="70" Text="Timbra" Clicked="Timbra_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
    
    </StackLayout>
</ContentPage>