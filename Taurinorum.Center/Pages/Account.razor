            <label>@utente.Cognome</label>
        </div>
            
            
        <br>
        <br>
    
            
        <div class="col-12" align="left">
            <label>Username</label>
        </div>
    
        <div class="col-12" align="left">
            <label>@utente.Username</label>
        </div>

    </div>
    
    
</div>

<br>
