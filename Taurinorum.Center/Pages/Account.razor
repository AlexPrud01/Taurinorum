        <button style="width:100%;" class="btn btn-site" @onclick="VisualizzaSettimana">Visualizza settimana lavorativa</button>
    </div>
    
    <div class="col-6" align="left">
        <button style="width:100%;" class="btn btn-site" @onclick="VisualizzaOreEffettuateMese">Visualizza ore lavorate</button>
    </div>

</div>

