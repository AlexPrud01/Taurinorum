@inherits BasePage

<PageTitle>@GetEnumDisplayName(Pagina)</PageTitle>
@if (utente.Admin || SelezionaDett)
{
    <div class="row">
        @if (Messaggio)
        {
            <AllertComponent allert="@Allert" />
        }
        <div class="col-12">
            <h1 style="text-align:left; vertical-align:central">@GetEnumDisplayName(Pagina)</h1>
        </div>
        <div class="col-6">
        </div>

        <div class="col-3">
        </div>
        <div class="col-3">
            @if (InModifica)
            {
                <button class="btn btn-site" style="width:100%" onclick="@Modifica">Modifica</button>
            }
            else
            {
                <button class="btn btn-site" style="width:100%" onclick="@Salva">Salva</button>
            }
        </div>
    </div>
    @if (Modale_IsOpen)
    {
        <Modale PaginaApertura="PaginaDaAprire" OnClose="ChiudiModale" />
    }
    else
    {
        @Childcontent
    }
}
